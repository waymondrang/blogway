{
    "name": "blogway-serverless",
    "version": "1.0.0",
    "description": "",
    "license": "ISC",
    "author": "",
    "type": "module",
    "main": "index.js",
    "scripts": {
        "dev": "concurrently --names 'server,webpack,sass' --prefix-colors 'blue,yellow,magenta' 'nodemon dev/server.js' 'webpack --watch' 'sass --pkg-importer=node --watch src/scss/index.scss static/css/styles.bundle.css'",
        "dev:server": "nodemon dev/server.js",
        "dev:css": "sass --pkg-importer=node --watch src/scss/index.scss static/css/styles.bundle.css",
        "build": "webpack --mode production && sass --pkg-importer=node src/scss/index.scss static/css/styles.bundle.css"
    },
    "dependencies": {
        "@blogway/styles": "*"
    },
    "devDependencies": {
        "concurrently": "^9.2.1",
        "ejs": "^3.1.10",
        "express": "^5.1.0",
        "nodemon": "^3.1.10",
        "sass": "^1.94.0",
        "ts-loader": "^9.5.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "webpack": "^5.102.1",
        "webpack-cli": "^6.0.1"
    }
}
